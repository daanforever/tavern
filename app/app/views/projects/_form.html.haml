= simple_form_for(@project, Settings.form.horizontal ) do |f|
  = f.error_notification

  .row
    .form-inputs.col-md-8.col-md-offset-1
      = f.input :name, disabled: true
      = f.input :label
      = f.input :description
      = f.input :disabled

  .row
    .form-actions.col-md-6.col-md-offset-3
      = f.button :submit, class: 'btn-primary'
      = link_to 'Cancel', '#', class: 'btn btn-default btn-back'
      - unless @project.new_record?
        = link_to @project, :method => :delete, class: 'btn btn-sm btn-danger', 
          title: 'Delete', data: { confirm: "Are you sure?" } do
          %span.glyphicon.glyphicon-trash

