%h1 Listing environments

%table.table
  %thead
    %tr
      %th Name
      %th Release
      %th
      %th
      %th

  %tbody
    - @environments.each do |environment|
      %tr
        %td= environment.name
        %td= environment.release.name
        %td= link_to 'Show', environment
        %td= link_to 'Edit', edit_environment_path(environment)
        %td= link_to 'Destroy', environment, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

