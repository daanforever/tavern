- content_for :header do
  %h1 
    #{@release.project.name}:#{@release.name}
    = link_to "#", class: 'btn btn-default btn-back', title: 'Back' do
      %span.glyphicon.glyphicon-circle-arrow-left
    = link_to edit_release_path(@release), class: 'btn btn-default btn-rotate', title: 'Settings' do
      %span.glyphicon.glyphicon-cog
  %hr

.row
  .col-md-3
    %p
      %b #{t('.alias')}:
  .col-md-9
    = @release.label
.row
  .col-md-3
    %p
      %b Components:
  .col-md-9
    - @release.components.order(:name).each do |component|
      .row
        .col-md-2
          %p= component.name
        .col-md-10
          %i= component.images.where(release: @release).map{|i| i.name}.join(',')

.row
  .col-md-3
    %p
      %b Description:
  .col-md-9
    = @release.description

