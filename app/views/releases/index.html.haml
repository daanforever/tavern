- content_for :header do
  %h1
    Listing releases for
    / = link_to @project.name, @project
  %hr


%table.table
  %thead
    %tr
      %th Name
      %th Description

  %tbody
    - @releases.each do |release|
      %tr
        %td= release.name
        %td= release.description

%br

= link_to 'New Release', new_release_path
