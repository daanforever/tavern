%p#notice= notice

= link_to "#", class: 'btn btn-default btn-back' do
  %span.glyphicon.glyphicon-circle-arrow-left
= link_to edit_host_path(@host), class: 'btn btn-default' do
  %span.glyphicon.glyphicon-cog

%hr

.row
  .col-md-6
    %p
      %b Url:
      = @host.url
    %p
      %b Name:
      = @host.name
    %p
      %b Disabled:
      = @host.disabled
  .col-md-6
    .panel.panel-default
      .panel-heading
        %h4 Instances
      .panel-body
        - @host.instances.each do |instance|
          %p #{instance.image.project.name}/#{instance.component.name}:#{instance.port}

%p
  %b Description:
  = @host.description
